pipeline {
    agent any
    environment {
        PRISMA_TWISTLOCK_URL = credentials('PRISMA_TWISTLOCK_URL')
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/D3nchikP/denisprisma.git'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("denisprisma-test:v1")
                }
            }
        }
        
        stage('Scan Docker Image with Prisma Cloud') {
            steps {
                script {
                    prismaCloudScanImage(
                        console: PRISMA_TWISTLOCK_URL,
                        credentialId: 'PRISMA_ACCESS_KEY',
                        image: "denisprisma-test:v1",
                        failOnCritical: true
                    )
                }
            }
        }
    }
}
